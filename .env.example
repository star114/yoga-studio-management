# Database Configuration
# Docker Compose가 자동으로 PostgreSQL 17 컨테이너를 생성합니다
DB_NAME=yoga_studio
DB_USER=yoga_admin
DB_PASSWORD=change_this_secure_password_123!
DB_PORT=5432

# JWT Secret (랜덤 문자열 생성 권장)
# 생성 방법: openssl rand -base64 32
JWT_SECRET=please_change_this_to_a_random_secret_key_min_32_chars

# Admin 초기 설정 (첫 로그인 후 변경하세요)
ADMIN_ID=admin
ADMIN_PASSWORD=admin123

# Docker image 배포 설정 (docker-compose.prod.yml / deploy.sh)
DOCKERHUB_USERNAME=your_dockerhub_username
APP_TAG=latest
CORS_ORIGIN=http://localhost:3000

# 기타
NODE_ENV=production

# 수업 자동 상태 워커 설정
CLASS_AUTO_CLOSE_WORKER_ENABLED=true
CLASS_AUTO_CLOSE_INTERVAL_MS=60000
