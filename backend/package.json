{
  "name": "yoga-backend",
  "version": "1.0.0",
  "description": "Yoga Studio Management Backend",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "migrate": "ts-node src/scripts/migrate.ts",
    "init-db": "ts-node src/scripts/initDatabase.ts",
    "lint": "eslint \"src/**/*.ts\" \"tests/**/*.js\"",
    "lint:fix": "npm run lint -- --fix",
    "test": "npm run build && node --test tests/*.test.js",
    "test:coverage": "npm run build && c8 --reporter=text --reporter=lcov node --test tests/*.test.js",
    "test:ci": "npm run lint && npm run test:coverage"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.20",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.9.0",
    "@types/pg": "^8.16.0",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "c8": "^10.1.3",
    "eslint": "^8.57.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  }
}
